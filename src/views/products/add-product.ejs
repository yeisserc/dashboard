  <div class="row">
    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add-product" method="post">
            <h3 class="">Categorias</h3>
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="descripcion" cols="80"
                placeholder="Agrega una descripcion"
                ></textarea>
            </div>
            <button class="btn btn-primary" type="submit">
              Agregar
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Operaciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i <products.length; i++) { %>
          <tr>
            <td><%= i + 1%></td>
            <td><strong><%= products[i].name %></strong></td>
            <td><%= products[i].category %></td>
            <td>
              <a href="../delete/<%= products[i]._id %>"
                class="btn btn-danger">
                Delete
              </a>
              <a href="../edit/<%= products[i]._id %>" class="btn btn-info">
                Edit
              </a>
            </td>
          </tr>
        <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>

